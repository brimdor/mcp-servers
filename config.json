{
  "$schema": "https://raw.githubusercontent.com/open-webui/mcpo/main/schemas/config.schema.json",
  "version": "1.0",
  "server": {
    "host": "0.0.0.0",
    "port": 8081,
    "auth": {
      "type": "token",
      "env": "MCPO_API_KEY"
    },
    "cors": {
      "enabled": true,
      "origins": ["*"]
    }
  },
  "logLevel": "info",
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=America/Chicago"]
    },
    "status": {
      "command": "uvx",
      "args": ["mcp-server-status"]
    }
  },
  "upstreams": [],
  "tools": [],
  "commands": []
}

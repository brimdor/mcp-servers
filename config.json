{
  "$schema": "https://raw.githubusercontent.com/open-webui/mcpo/main/schemas/config.schema.json",
  "version": "1.0",
  "server": {
    "host": "0.0.0.0",
    "port": 8081,
    "auth": {
      "type": "token",
      "env": "MCPO_API_KEY"
    },
    "cors": {
      "enabled": true,
      "origins": ["*"]
    }
  },
  "logLevel": "info",
  "mcpServers": {
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=America/Chicago"]
    }
    ,
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--host", "0.0.0.0", "--port", "8931", "--browser", "chromium", "--no-sandbox"]
    }
  },
  "upstreams": [
    {
      "name": "playwright-mcp",
      "type": "git",
      "url": "https://github.com/microsoft/playwright-mcp.git",
      "ref": "main",
      "install": [
        "npx playwright install-deps || true",
        "npx playwright install chromium"
      ]
    }
  ],
  "tools": [],
  "commands": []
}

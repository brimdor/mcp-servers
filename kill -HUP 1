#!/usr/bin/env sh
# Executable named exactly 'kill -HUP 1' so updater can exec it directly.
# This script forwards the intended signal to PID 1.
# It's intentionally named with spaces to match the exechook command.

# Allow the script to be called with or without extra args.
set -e
# Default to HUP 1 if no args provided
if [ "$#" -eq 0 ]; then
  /bin/sh -c 'kill -HUP 1'
else
  # If extra args provided, pass them to kill
  /bin/sh -c "kill $*"
fi
